body {
  background-color: #F6F6F6;
  font-family: Arial, "sans serif";
}

div#images div.pagination {
  margin-bottom: 10px;
}

div#images form {
  margin-bottom: 10px;
}

.best_in_place {
  padding: .1m;
  cursor: hand;
  cursor: pointer;
 }

.best_in_place:hover {
  padding-right: 1.5em;
  background: url(<%= asset_path "red_pen.png" %>) no-repeat right;
  background-color: #CCC;
}

div#images table tr td, div#images table tr th {
  padding: 10px;
  text-align: left;
}

div#images table tr td.tags {
  width: 300px;
}

div#links ul {
  list-style: none;
}
